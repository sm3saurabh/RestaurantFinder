<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
                name="shouldShowHome"
                type="boolean"
        />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/dashboard_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            tools:context=".ui.dashboard.DashboardActivity">

        <FrameLayout
                android:id="@+id/dashboard_fragment_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/dashboard_bottom_nav_container"
        />


        <LinearLayout
                android:id="@+id/dashboard_bottom_nav_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent">
            <LinearLayout
                    android:id="@+id/dashboard_nav_home_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="@{ shouldShowHome ? @color/zomato_red : @color/white }"
            >
                <ImageView
                        android:id="@+id/dashboard_nav_home_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_home_black_24dp"
                        android:tint="@{ shouldShowHome ? @color/white : @color/black }"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home"
                        android:textColor="@{ shouldShowHome ? @color/white : @color/black }"
                />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/dashboard_nav_favorite_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="@{ shouldShowHome ? @color/white : @color/zomato_red }"
            >
                <ImageView
                        android:id="@+id/dashboard_nav_favorite_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_favorite_black_24dp"
                        android:tint="@{ shouldShowHome ? @color/black : @color/white }"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/favorites"
                        android:textColor="@{ shouldShowHome ? @color/black : @color/white }"
                />

            </LinearLayout>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>