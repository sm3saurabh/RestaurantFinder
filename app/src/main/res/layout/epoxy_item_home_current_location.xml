<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="currentLocationName"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/home_current_location_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{ @string/your_current_location(currentLocationName) }"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.RF.Headline4"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Your current location is Hyderabad" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>